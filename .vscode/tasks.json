{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    // Setup tasks
    {
      "label": "setup.sh",
      "type": "shell",
      "command": "./setup.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        }
    },
    {
      "label": "setup-data-dir.py",
      "type": "shell",
      "command": "./setup-data-dir.py",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        }
    },
    {
      "label": "create-train.sh",
      "type": "shell",
      "command": "./create-train.sh ${fileBasenameNoExtension}",
      "options": {
        "cwd": "${workspaceFolder}",
        },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        }
    },
    // Testing tasks
    {
      "label": "dump-forward.py",
      "type": "shell",
      "command": "${config:python.pythonPath} ./returnn/tools/dump-forward.py ${file}",
      "options": {
        "cwd": "${workspaceFolder}",
        },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        }
    },
    {
      "label": "dump-dataset.py",
      "type": "shell",
      "command": "${config:python.pythonPath} ./returnn/tools/dump-dataset.py ${file} ${input:dump_dataset_options}",
      "options": {
        "cwd": "${workspaceFolder}",
        },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        }
    },
    // Running tasks
    {
      "label": "rnn.py",
      "type": "shell",
      "command": "${config:python.pythonPath} returnn/rnn.py ${file} ${input:rnn_options}",
      "options": {
        "cwd": "${workspaceFolder}/data-train/${fileBasenameNoExtension}/",
        },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        }
    },
  ],

  "inputs": [
    {
        "id": "rnn_options",
        "description": "Give options for rnn.py such as --task train ++device cpu",
        "default": "--task nop ++device cpu",
        "type": "promptString"
    },
    {
      "id": "dump_dataset_options",
      "description": "Give options for dump-dataset.py such as --dataset train --epoch 1",
      "default": "--dataset train --epoch 1",
      "type": "promptString"
  },
  ],
}



